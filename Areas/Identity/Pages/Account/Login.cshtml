@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>E-nompilo</title>
    <link rel="shortcut icon" type="image/png" src="~/logos/favicon .ico" />

    <link rel="stylesheet" href="~/assets/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
     <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a asp-controller="Home" asp-action="Index" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="~/logos/3.png" style="width:250px" />
                                </a>
                                <p class="text-center">Welcome Back to <span class="text-primry">E</span>-Nompilo</p>

                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                   
                                    <div class="mb-4">
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Input.Email" aria-describedby="emailHelp">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <input type="pasword" class="form-control" id="exampleInputEmail1" asp-for="Input.Password" aria-describedby="emailHelp">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Sign In</button>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="fs-4 mb-0 fw-bold">Dont have  an Account?</p>
                                        <a id="register" asp-area="Identity" asp-page="/Account/Register" class="text-primary fw-bold ms-2" id="registerSubmit">Sign Up</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

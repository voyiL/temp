
@{
    ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Landing.cshtml";
}
<style>
    #dash-con, #AssessmentTable {
        background: rgba( 0, 93, 255, 0.35 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 2.5px );
        -webkit-backdrop-filter: blur( 2.5px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
    }

        #dash-con:hover {
            background: rgba( 0, 93, 255, 0.65 );
            box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
            backdrop-filter: blur( 12px );
            -webkit-backdrop-filter: blur( 12px );
            border-radius: 10px;
            border: 1px solid rgba( 255, 255, 255, 0.18 );
        }
</style>

<!-- Modal -->
@if(TempData["Welcome"] != null)
{
    <div id="myModal" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-center">

                    <button type="button" id="close" class="close btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="container text-center">
                    <img src="~/image/welcome.jpg" style="width:250px" class="mb-5" />
                    <h2 class=" text-center">@TempData["Welcome"]</h2>
                </div>
            </div>
        </div>
    </div>
}



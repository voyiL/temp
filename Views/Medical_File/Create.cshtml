@model Primary_HealthCare_System.Models.Medical_File

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="bg-primary ">
    <h1 class="m-1 text-center text-white">Create Medical FIle</h1>
</div>
<hr />
<div class="row">

    <form asp-action="Create" class="row gap-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-5 border">
            <h4 class="text-center m-1">Personal Information</h4>
            <div class="form-group">
                <label asp-for="IDNumber" class="control-label"></label>
                <input asp-for="IDNumber" class="form-control" />
                <span asp-validation-for="IDNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateofBirth" class="control-label"></label>
                <input asp-for="DateofBirth" class="form-control" />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <Select asp-for="Gender" class="form-control">
                    <option>Male</option>
                    <option>Female</option>
                    <option>Others</option>
                </Select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="col-5 border">
            <h4 class="text-center m-1 text-danger">Medical And  Emergency</h4>
            <div class="form-group">
                <label asp-for="BloodType" class="control-label"></label>
                <input asp-for="BloodType" class="form-control" />
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allergies" class="control-label"></label>
                <input asp-for="Allergies" class="form-control" />
                <span asp-validation-for="Allergies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyPerson" class="control-label"></label>
                <input asp-for="EmergencyPerson" class="form-control" />
                <span asp-validation-for="EmergencyPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyPersonConact" class="control-label"></label>
                <input asp-for="EmergencyPersonConact" class="form-control" />
                <span asp-validation-for="EmergencyPersonConact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Medical File" class="btn btn-primary m-1" />
            </div>
        </div>
        <div class="col-1">
            <img class="justify-content-center alight-items-center" src="~/image/medidddd.png" width="100px" />
        </div>

    </form>

</div>

<div>
    <a asp-action="MyFile">Back to My File</a>
</div>

